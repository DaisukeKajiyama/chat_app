<h2 class="login_title">LIME</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.email_field :email, placeholder:"メールアドレス", autofocus: true, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, placeholder:"パスワード", autocomplete: "off", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label "ログインしたままにする" %>
    </div>
  <% end -%>

  <div class="actions form-group">
    <%= f.submit "ログイン",class:"btn btn-info login_btn"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
