<div class="user_profile">
  <div class="user_profile_image">
    <% if @user.image.url.present? %>
    <%= image_tag(@user.image.url, :class => "user_profile_image_id") %>
    <% else %>
    <%= image_tag('/assets/images/default_image.jpg', :class => "user_profile_image_id") %>
    <% end %>
  </div>

  <div class="user_profile_name">
    <%= @user.name %>
  </div>

  <div class="user_profile_email">
    <%= @user.email %>
  </div>

  <div class="user_profile_edit_btn">
    <% if @user == current_user %>
      <%= link_to "プロフィール編集", edit_user_registration_path , class:"btn btn-info" %>
    <% end %>
  </div>
</div>
